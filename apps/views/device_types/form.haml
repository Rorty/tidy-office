- error = @device_type.errors.include?(:name)
.form-group{class: "#{'has-error' if error}"}
  %label.control-label{:for => "name"}= t(:name)
  %input.form-control{:name => "device_type[name]", :type => "text", :value => "#{@device_type.name}"}
  %span.help-block= @device_type.errors[:name].first if error

- error = @device_type.errors.include?(:compatibility)
.form-group 
  .checkbox{class: "#{'has-error' if error}"}
    %label
      %input{:name => "device_type[compatibility]", :type => "hidden", :value => "0"}
      %input{:checked => ("checked" if @device_type.compatibility) , :name => "device_type[compatibility]", :type => "checkbox", :value => "1"}
      = t(:compatibility)
    %span.help-block= @device_type.errors[:compatibility].first if error

%input.btn.btn-success{type: "submit", value: t(:save)}
%a.btn.btn.btn-default{href: url("device_types", false)}= t(:cancel)